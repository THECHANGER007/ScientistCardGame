<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScientistCardGame.Views.DeckBuilderTestPage"
             Title="Deck Builder Test">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <VerticalStackLayout Grid.Row="0" Spacing="10">

            <Label Text="ðŸƒ Deck Builder System Test"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1F4788"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="ðŸ“‹ Create Starter Deck"
                        Clicked="OnCreateStarterDeckClicked"
                        BackgroundColor="#28a745"/>

                <Button Text="ðŸ”¬ Create Science Deck"
                        Clicked="OnCreateScienceDeckClicked"
                        BackgroundColor="#17a2b8"/>

                <Button Text="ðŸ†• New Empty Deck"
                        Clicked="OnCreateEmptyDeckClicked"
                        BackgroundColor="#6c757d"/>
            </HorizontalStackLayout>

            <Frame BorderColor="#1F4788" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="5">
                    <Label x:Name="DeckNameLabel"
                           Text="No Deck Created"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#1F4788"/>

                    <Label x:Name="DeckStatsLabel"
                           Text="Create a deck to see statistics"
                           FontSize="12"
                           TextColor="Gray"/>

                    <Label x:Name="ValidationLabel"
                           FontSize="14"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Browse Cards:" FontSize="16" FontAttributes="Bold"/>

            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                <Button Text="ALL" Clicked="OnShowAllCardsClicked" 
                        BackgroundColor="Gray" WidthRequest="80" HeightRequest="40"/>
                <Button Text="LEGENDARY" Clicked="OnShowLegendaryClicked" 
                        BackgroundColor="#FFD700" TextColor="Black" WidthRequest="100" HeightRequest="40"/>
                <Button Text="SCIENCE" Clicked="OnShowScienceClicked" 
                        BackgroundColor="#17a2b8" WidthRequest="90" HeightRequest="40"/>
                <Button Text="DISCOVERY" Clicked="OnShowDiscoveryClicked" 
                        BackgroundColor="#90EE90" TextColor="Black" WidthRequest="100" HeightRequest="40"/>
                <Button Text="PARADOX" Clicked="OnShowParadoxClicked" 
                        BackgroundColor="#FFB6C1" TextColor="Black" WidthRequest="90" HeightRequest="40"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <ScrollView Grid.Row="1" Margin="0,10,0,10">
            <VerticalStackLayout x:Name="CardListContainer" Spacing="5"/>
        </ScrollView>

        <Frame Grid.Row="2" BorderColor="Orange" CornerRadius="10" Padding="10" 
               BackgroundColor="#FFF8DC">
            <VerticalStackLayout Spacing="5">
                <Label Text="ðŸ“¦ Current Deck Cards" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="DarkOrange"/>

                <ScrollView MaximumHeightRequest="150">
                    <Label x:Name="CurrentDeckLabel"
                           Text="Deck is empty"
                           FontSize="12"
                           TextColor="Black"/>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>

    </Grid>

</ContentPage>